<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="150dip"
	android:gravity="center_vertical"
	android:orientation="vertical">
	<cef.egliseactu.view.ASmartImageView
		android:id="@+id/thumbnail" android:layout_width="120dip"
		android:layout_height="90dip" android:layout_centerVertical="true"
		android:layout_marginRight="5dip" android:gravity="center" />
	<TextView android:id="@+id/title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="0dip"
		android:layout_margin="0dip" android:singleLine="true"
		android:gravity="center"
		android:ellipsize="marquee"/>
</LinearLayout>