<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="5dip" android:gravity="left|center_vertical"
	android:orientation="horizontal">
	<TextView android:id="@+id/title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="0dip"
		android:layout_margin="0dip" android:singleLine="true"
		android:ellipsize="marquee" android:gravity="left"
		android:layout_alignParentTop="true" style="@style/TextHeader" />

	<cef.egliseactu.view.ASmartImageView
		android:id="@+id/thumbnail" android:layout_width="90dip"
		android:layout_height="60dip" android:layout_centerVertical="true"
		android:layout_marginRight="8dip" android:gravity="center"
		android:layout_alignParentLeft="true" android:layout_below="@id/title" />
	<TextView android:id="@+id/description" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="5dip"
		android:singleLine="false" android:ellipsize="none"
		android:padding="0dip" android:layout_margin="0dip"
		android:layout_toRightOf="@id/thumbnail" android:layout_below="@id/title"
		style="@style/TextDescription" />
	<TextView android:id="@+id/date" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginLeft="5dip"
		android:singleLine="true" android:ellipsize="none" android:padding="0dip"
		android:layout_margin="0dip" android:layout_toRightOf="@id/thumbnail"
		android:layout_below="@id/description" style="@style/TextFooter" />
	<TextView android:id="@+id/category" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:padding="0px"
		android:layout_margin="0dip" android:singleLine="true"
		android:ellipsize="marquee" android:layout_toRightOf="@id/date"
		android:layout_below="@id/description" android:gravity="right"
		android:layout_alignParentRight="true" style="@style/TextFooter" />
</RelativeLayout>